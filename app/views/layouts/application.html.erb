<!DOCTYPE html>
<html>
<head>
  <title>Spamless</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
    <% else %>
      <a href="<%= new_user_session_url %>">Login</a>
    <% end %>
  </header>

<%= yield %>

</body>
</html>
